# =============================================================================
# LLM Provider - at least one required
# =============================================================================

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
GOOGLE_GENERATIVE_AI_API_KEY=...

# OpenRouter (600+ models)
OPENROUTER_API_KEY=sk-or-...

# =============================================================================
# Agent Configuration
# =============================================================================

# Model to use (default: claude-haiku-4-5)
AGENT_MODEL=claude-haiku-4-5

# Path to agent workspace (default: /workspace)
AGENT_WORKSPACE=/workspace

# =============================================================================
# Memory Configuration
# =============================================================================

# Path to LibSQL database (default: /workspace/.db/agent.db)
MEMORY_DB_PATH=/workspace/.db/agent.db

# Number of recent messages to keep in context (default: 5)
MEMORY_LAST_MESSAGES=5

# Messages before MEMORY.md consolidation (default: 85)
MEMORY_CONSOLIDATION_THRESHOLD=85

# =============================================================================
# Server Configuration
# =============================================================================

# HTTP server port (default: 4111)
PORT=4111

# =============================================================================
# Scheduling Configuration
# =============================================================================

# Heartbeat interval in seconds (default: 1800 = 30 min)
HEARTBEAT_INTERVAL=1800

# Enable heartbeat (default: true)
HEARTBEAT_ENABLED=true

# =============================================================================
# Shell Tool Configuration (disabled by default)
# =============================================================================

# Enable execShell tool (default: false)
SHELL_TOOL_ENABLED=false

# Comma-separated dangerous command patterns to deny
SHELL_DENY_PATTERNS=rm -rf /,dd if=,mkfs
